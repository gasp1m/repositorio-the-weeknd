@media (min-width: 768px){


    header {

        position: fixed;
        width: 100%;
        
        .container{ 
            @include responsive(row, space-between);
            
            nav{
                @include responsive(row, space-between);
                padding-bottom: 0;
                padding-right: 30px;
            }
        }
    }
    
    #biografia .container {
        display: flex;
        justify-content: center;
    
        .img-container {
            background-image: linear-gradient(
            0deg,
            rgba(0,0,0,0.5),
            rgba(0,0,0,0.5)
            ),url(../img/theweeknd.jpg);
            background-size: cover;
            background-position: center center;
            height: 400px;
            width: 320px;
        }
        
        .texto {
            display: flex;
            justify-content: center;
            width: 50%;
            max-width: 600px;
            text-align: initial;
            padding: 0px 30px;
            flex-direction: column;
            
            h2 {
                margin-top: 0;
            }
        }
    }

    #sobre-su-carrera .cartas {
        display: flex;
        justify-content: center;
    
        h3 {
            margin-top: 0;
        }

        p {
            display: block;
            margin-bottom: 30px;
            line-height: 32px;
        }
    }
}

